{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Clip Wave",
  "version": "0.2.1",
  "identifier": "com.clipwave.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Clip Wave",
        "width": 950,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "maxWidth": 1200,
        "maxHeight": 1600,
        "maximized": false,
        "resizable": true,
        "maximizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "description": "Main window permissions (MVP v0.1).",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "dialog:allow-open",
            "opener:allow-reveal-item-in-dir",
            {
              "identifier": "opener:allow-open-url",
              "allow": [
                {
                  "url": "https://ffmpeg.org"
                },
                {
                  "url": "https://www.gyan.dev/*"
                },
                {
                  "url": "https://www.gnu.org/*"
                },
                {
                  "url": "ms-settings:*"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/installer-hooks.nsh",
        "installMode": "perMachine"
      },
      "wix": {
        "template": "wix/main.wxs",
        "fragmentPaths": [],
        "componentRefs": []
      }
    }
  }
}
